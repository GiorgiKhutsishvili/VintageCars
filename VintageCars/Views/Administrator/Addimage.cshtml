@model VintageCars.Models.ImageValidation

<script>
    function show(input) {
        if (input.files && input.files[0]) {
            var filerdr = new FileReader();
            filerdr.onload = function (e) {
                $("#carImg").attr('src', e.target.result);
            }
            filerdr.readAsDataURL(input.files[0]);
        }
    }
</script>

@using (Html.BeginForm("Addimage", "Administrator", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()
    <div class="carImage">
        <img id="carImg" height="100" width="90" style="border:solid" />
    </div>

    <div class="choosefile">
        @Html.TextBoxFor(model => model.file, new { type = "file", title = "choose file", id = "file", name = "file", onchange = "show(this)" })
        @Html.ValidationMessageFor(model => model.file, "", new { @class = "text-danger" })
    </div>

    <div class="title">Title</div>

    <div class="inputtitle">
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { placeholder = "Title", id = "title", name = "title"} })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger"})
    </div>

    <input type="submit" title="add" />
}

